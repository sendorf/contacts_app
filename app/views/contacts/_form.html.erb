<%= simple_form_for(@contact, :html => {:class => 'form-vertical' }) do |f| %>

  <%= f.input :first_name, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>

  <%= f.input :surname, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>

  <%= f.input :address, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>

  <%= f.input :phone_number, 
              :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'} %>

  <%= f.input :email, 
              :label_html => { :class => 'col-md-offset-1' }, 
              :input_html => {:class => 'col-md-offset-1'} %>

  <%= f.button :submit, :class => 'col-md-offset-1 btn btn-warning' %>
<% end %>